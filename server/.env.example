# Train Position WebSocket Server Configuration

# WebSocket Server Configuration
WS_PORT=8080
NODE_ENV=development

# UDP Bridge Configuration
UDP_PORT=9999

# Mock Data Configuration (for development)
# Set to 'true' to use mock data instead of real UDP data
# Useful for development and testing when no real SDR data is available
USE_MOCK_DATA=false
# Interval in milliseconds for mock data generation (default: 5000ms)
MOCK_DATA_INTERVAL=5000

# POCSAG Data Integration (optional)
POCSAG_UDP_PORT=5000
POCSAG_HOST=localhost

# Railway Data (optional)
RAILWAY_DATA_PATH=../connect/railwayGeojson_shangxing_test.json
